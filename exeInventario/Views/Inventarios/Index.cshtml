@model IEnumerable<exeInventario.Models.Inventario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID_Cli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome_Cli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_Maq)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo_Maq)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_Cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Maq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo_Maq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Inv">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Inv">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Inv">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
