@model exeInventario.Models.Cad_Clientes

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cadastrar</h1>

<h4>Cad_Clientes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome_Cli" class="control-label"></label>
                <input asp-for="Nome_Cli" class="form-control" />
                <span asp-validation-for="Nome_Cli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telelfone_Cli" class="control-label"></label>
                <input asp-for="Telelfone_Cli" class="form-control" />
                <span asp-validation-for="Telelfone_Cli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email_Cli" class="control-label"></label>
                <input asp-for="Email_Cli" class="form-control" />
                <span asp-validation-for="Email_Cli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
